<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/navigation_dashboard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:orientation="vertical"
        tools:context=".UserComponent.dashboard.DashboardFragment">


  <TextView
          android:layout_gravity="center"
          android:layout_margin="8dp"
          android:textColor="@color/textPrimaryColor"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:fontFamily="@font/poppinsmedium"
          android:textSize="16dp"
          android:text="My Orders"/>
  <ProgressBar
          android:layout_gravity="center"
          android:id="@+id/dashprogess"
          android:layout_width="match_parent"
          android:layout_height="50dp"
          android:layout_marginTop="10dp"
          android:visibility="gone"/>
  <androidx.cardview.widget.CardView
          android:id="@+id/dashcard"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="10dp"
          android:layout_marginTop="10dp"
          android:layout_marginRight="10dp"
          android:elevation="24dp"
          android:padding="8dp"
          app:cardBackgroundColor="@color/white"
          app:cardCornerRadius="20dp"
          app:cardMaxElevation="36dp">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

      <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginLeft="12dp"
              android:layout_marginRight="12dp"
              android:orientation="horizontal">


        <TextView
                android:id="@+id/timeDashBoard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/poppinsmedium"
                android:text=""
                android:textColor="@color/textSecondaryColor"
                android:textSize="12dp"/>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="horizontal">

          <TextView

                  android:id="@+id/textView3"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_toLeftOf="@+id/tokenuser"
                  android:fontFamily="@font/poppinsbold"
                  android:text="@string/token_no"
                  android:textColor="@color/green"
                  android:textSize="12dp"/>

          <TextView
                  android:id="@+id/tokenuser"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignParentEnd="true"
                  android:fontFamily="@font/poppinsbold"
                  android:text=""
                  android:textColor="@color/green"
                  android:textSize="12dp"/>


        </RelativeLayout>
      </LinearLayout>

      <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_marginLeft="12dp"
              android:layout_marginRight="12dp"
              android:orientation="horizontal">

        <TextView
                android:textAlignment="textStart"
                android:id="@+id/dashfoodname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_weight="4"
                android:fontFamily="@font/poppinsbold"
                android:paddingLeft="5dp"
                android:text=""
                android:textColor="@color/textSecondaryColor"
                android:textSize="16dp"/>

        <TextView

                android:id="@+id/dashquantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/poppinsmedium"
                android:text=""
                android:textAlignment="center"
                android:textColor="@color/textSecondaryColor"
                android:textSize="16dp"/>

        <TextView
                android:id="@+id/dashprize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:fontFamily="@font/poppinsmedium"
                android:text=""
                android:textAlignment="center"
                android:textColor="@color/textSecondaryColor"
                android:textSize="16dp"/>
      </LinearLayout>

      <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_marginLeft="12dp"
              android:layout_marginRight="12dp"
              android:orientation="horizontal">

        <TextView
                android:id="@+id/ttopotalname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:fontFamily="@font/poppinsbold"
                android:text="@string/total_amount"
                android:textColor="@color/textPrimaryColor"
                android:textSize="18dp"/>

        <TextView
                android:id="@+id/rsname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/dashtotal"
                android:layout_weight="0.1"
                android:fontFamily="@font/poppinsbold"
                android:text="@string/rs"
                android:textAlignment="textEnd"
                android:textColor="@color/textPrimaryColor"
                android:textSize="18dp"/>

        <TextView
                android:id="@+id/dashtotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_weight="2"
                android:fontFamily="@font/poppinsbold"
                android:textColor="@color/textPrimaryColor"
                android:textSize="18dp"/>

      </RelativeLayout>


      <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:padding="2dp">

        <Button
                android:id="@+id/cancle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginStart="2dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="2dp"
                android:layout_marginBottom="2dp"
                android:background="@drawable/rounded_rectangele"
                android:fontFamily="@font/poppinsmedium"
                android:text="@string/cancel"
                android:textColor="#FFFFFF"/>


        <Button
                android:layout_margin="2dp"
                android:id="@+id/pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:background="@drawable/rounded_rectangele"
                android:fontFamily="@font/poppinsmedium"
                android:text="@string/pay"
                android:textColor="#FFFFFF"/>
      </RelativeLayout>

      <LinearLayout
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:orientation="vertical">

        <TextView
                android:id="@+id/orderredytext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppinsmedium"
                android:text="@string/your_order_is_ready"
                android:textColor="@color/green"
                android:textSize="16dp"
                android:visibility="gone"/>
      </LinearLayout>


      <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:orientation="horizontal">

        <TextView
                android:id="@+id/turn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppinsmedium"
                android:text=""
                android:textAlignment="center"
                android:textColor="@color/textSecondaryColor"
                android:textSize="16dp"/>
      </LinearLayout>


    </LinearLayout>

  </androidx.cardview.widget.CardView>

</LinearLayout>