<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="210dp"
              android:orientation="vertical">

  <androidx.cardview.widget.CardView
          android:layout_width="match_parent"
          android:layout_height="190dp"
          android:layout_marginLeft="5dp"
          android:layout_marginTop="15dp"
          android:layout_marginRight="5dp"
          android:background="@drawable/shadowbackgroung"
          android:elevation="24dp"
          app:cardCornerRadius="30dp"
          app:cardMaxElevation="36dp">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="8dp">

      <androidx.cardview.widget.CardView

              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:background="@drawable/round_outline"
              app:cardCornerRadius="25dp">

        <ImageView
                android:id="@+id/foodPicturefoodtemp"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@mipmap/nointernet"/>

      </androidx.cardview.widget.CardView>

      <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

        <TextView
                android:id="@+id/foodNamefoodtemp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/poppinsmedium"
                android:gravity="center"
                android:textColor="@color/textPrimaryColor"
                android:textSize="16dp"/>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

          <TextView
                  android:id="@+id/textView5"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="10dp"
                  android:layout_marginTop="10dp"
                  android:fontFamily="@font/poppinsmedium"
                  android:text="@string/rs"
                  android:textColor="@color/textPrimaryColor"
                  android:textSize="24dp"/>

          <TextView
                  android:id="@+id/foodPrizeFoodtemp"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="10dp"
                  android:layout_marginTop="10dp"
                  android:fontFamily="@font/poppinsmedium"
                  android:textColor="@color/textPrimaryColor"
                  android:textSize="24dp"/>

        </LinearLayout>


        <Button
                android:layout_gravity="center_horizontal"
                android:id="@+id/removefoodtemp"
                android:layout_width="98dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_rectangele"
                android:fontFamily="@font/poppinsmedium"
                android:text="@string/remove"
                android:textColor="@color/white"/>


      </LinearLayout>

    </LinearLayout>
  </androidx.cardview.widget.CardView>
</LinearLayout>


